{
  "swagger": "2.0",
  "info": {
    "title": "Sultan L1 Blockchain API",
    "description": "Production REST API for Sultan L1 with IBC v8 support",
    "version": "1.0.0",
    "contact": {
      "name": "Sultan L1 Team"
    }
  },
  "basePath": "/",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check endpoint",
        "responses": {
          "200": {
            "description": "Service is healthy"
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Chain status endpoint",
        "responses": {
          "200": {
            "description": "Chain status information"
          }
        }
      }
    },
    "/cosmos/auth/v1beta1/accounts": {
      "get": {
        "summary": "Query all accounts",
        "tags": ["Auth"]
      }
    },
    "/cosmos/bank/v1beta1/balances/{address}": {
      "get": {
        "summary": "Query account balances",
        "tags": ["Bank"]
      }
    },
    "/cosmos/staking/v1beta1/validators": {
      "get": {
        "summary": "Query all validators",
        "tags": ["Staking"]
      }
    },
    "/ibc/core/client/v1/client_states": {
      "get": {
        "summary": "Query IBC client states",
        "tags": ["IBC"]
      }
    },
    "/ibc/core/connection/v1/connections": {
      "get": {
        "summary": "Query IBC connections",
        "tags": ["IBC"]
      }
    },
    "/ibc/core/channel/v1/channels": {
      "get": {
        "summary": "Query IBC channels",
        "tags": ["IBC"]
      }
    },
    "/ibc/apps/transfer/v1/denom_traces": {
      "get": {
        "summary": "Query IBC transfer denom traces",
        "tags": ["IBC Transfer"]
      }
    }
  },
  "tags": [
    {"name": "Auth", "description": "Account and authentication queries"},
    {"name": "Bank", "description": "Token balance queries"},
    {"name": "Staking", "description": "Validator and delegation queries"},
    {"name": "IBC", "description": "IBC protocol queries"},
    {"name": "IBC Transfer", "description": "IBC token transfer queries"}
  ]
}
